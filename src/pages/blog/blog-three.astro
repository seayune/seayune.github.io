---
import { getCollection } from "astro:content";
import EntriesThree from "@/components/blog/EntriesThree.astro";
const allPosts = await getCollection("posts");
import BaseLayout from "@/layouts/BaseLayout.astro";
---

<BaseLayout>
  <section>
    <div class="p-8 max-w-2xl mx-auto">
      <div>
        <p class="font-medium text-zinc-700 uppercase">
          Welcome to my little blog 2
        </p>
      </div>
      <ul class="grid grid-cols-1 gap-y-12 mx-auto mt-6 w-full" role="list">
        {
          allPosts
            .slice()
            .map((post) => (
              <EntriesThree
                url={"/posts/" + post.slug}
                title={post.data.title}
                description={post.data.description}
                alt={post.data.title}
                pubDate={post.data.pubDate.toString().slice(0, 15)}
                author={post.data.author}
                image={post.data.image.url}
              />
            ))
        }
      </ul>
    </div>
  </section>
</BaseLayout>
