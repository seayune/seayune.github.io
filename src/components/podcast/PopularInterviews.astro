---
// Assets
import { Image } from "astro:assets";
// Fundations
import Text from "@/components/fundations/elements/Text.astro";
const { url, title, description, pubDate, image, author, guestAvatar } = {
  url: "/podcast/interviews/" + Astro.props.post.slug,
  title: Astro.props.post.data.title,
  author: Astro.props.post.data.author,
  image: Astro.props.post.data.image.url,
  guestAvatar: Astro.props.post.data.guestAvatar.url,
  description: Astro.props.post.data.description,
  pubDate: new Date(Astro.props.post.data.pubDate).toLocaleDateString("en-US", {
    year: "numeric",
    month: "long",
    day: "2-digit",
  }),
};
---

<article class="relative">
  <div class="grid grid-cols-2 gap-2">
    <Image
      src={guestAvatar}
      width="1000"
      height="1000"
      class="aspect-square object-cover"
      alt={title}
    />
    <div class="flex flex-col h-full justify-between">
      <div>
          <Text tag="h2" variant="textXL" class="font-medium ">
            {author} â€”{title}
            <a href={url} title={title}>
              <span class="absolute inset-0"></span>
            </a>
          </Text>
          <Text tag="p" variant="textBase" class="text-base-500 mt-1">
            {description}
          </Text>
      </div>
      <Text tag="p" variant="textXS" class="uppercase mt-auto text-base-400">
        <time datetime={pubDate}>{pubDate}</time>
      </Text>
    </div>
  </div>
</article>
