<section>
  <div class="edge-alignment mx-auto p-8 text-[#47538a] text-sm flex flex-col w-full max-w-none">
    <div class="grid grid-cols-2 gap-4 lg:gap-12">
      <a href="/" class="block w-10 h-10 hover:opacity-80 transition-opacity">
        <img 
          src="/images/logo.png" 
          alt="Arthur Siyun Li" 
          class="h-10 w-auto"
          width="120"
          height="40"
          loading="lazy"
        >
      </a>

      <div class="md:hidden flex justify-end">
        <button 
          id="mobile-menu-button"
          class="md:hidden flex items-center justify-end w-10 h-10 text-[#47538a] hover:text-accent-600"
          aria-label="Toggle menu"
          aria-expanded="false"
        >
        <!-- Hamburger Icon (Default) -->
          <svg id="menu-open-icon" class="w-6 h-6 hover:text-accent-600" fill="none" stroke="#47538a" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>
          </svg>
  
        <!-- Close Icon (Hidden by default) -->
          <svg id="menu-close-icon" class="w-6 h-6 hidden hover:text-accent-600" fill="none" stroke="#47538a" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
          </svg>
        </button>
      </div>

      <!-- Desktop Navigation (hidden on mobile) -->
      <div class="hidden md:flex flex-col md:items-end gap-y-0.3 font-serif text-base text-[#47538a]">
        <a class="hover:text-accent-600" href="/">about</a>
        <a class="hover:text-accent-600" href="/listen">listen</a>
        <a class="hover:text-accent-600" href="/writing">writing</a>
        <a class="hover:text-accent-600" href="/gamedev">gamedev</a>
        <a class="hover:text-accent-600" href="/contact">contact</a>
      </div>
    </div>

    <!-- Mobile Dropdown (hidden by default) -->
    <div id="mobile-menu" class="hidden md:hidden mt-4 font-serif text-base text-[#47538a]">
      <div class="flex flex-col gap-0.3 items-end">
        <a class="hover:text-accent-600" href="/">about</a>
        <a class="hover:text-accent-600" href="/listen">listen</a>
        <a class="hover:text-accent-600" href="/writing">writing</a>
        <a class="hover:text-accent-600" href="/gamedev">gamedev</a>
        <a class="hover:text-accent-600" href="/contact">contact</a>
      </div>
    </div>
  </div>
</section>

<script>
  const menuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');
  const menuOpenIcon = document.getElementById('menu-open-icon');
  const menuCloseIcon = document.getElementById('menu-close-icon');

  menuButton.addEventListener('click', function() {
    const isExpanded = this.getAttribute('aria-expanded') === 'true';
    
    // Toggle menu visibility
    mobileMenu.classList.toggle('hidden');
    
    // Toggle icons
    menuOpenIcon.classList.toggle('hidden');
    menuCloseIcon.classList.toggle('hidden');
    
    // Update ARIA attribute
    this.setAttribute('aria-expanded', !isExpanded);
  });
</script>