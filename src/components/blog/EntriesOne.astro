---
const { title, url, description, pubDate, author } = Astro.props;
---

<li class="">
  <a href={url} title={title}>
    <article
      class="h-full flex flex-col justify-between gap-4 text-zinc-700 text-sm w-full hover:text-accent-600">
      <div class="flex flex-col h-full justify-between w-full">
        <p class="uppercase font-medium">
          {title}
        </p>
        <p class="mt-2 font-serif">
          {description}
        </p>
      </div>
      <div
        class="font-serif italic text-sm inline-flex items-center w-full tracking-wide gap-2">
        <p>
          {author}
        </p>
         &middot;
        <p><time datetime="2020-03-16"> {pubDate}</time></p>
      </div>
    </article>
  </a>
</li>
