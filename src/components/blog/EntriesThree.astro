---
const { title, url, description, pubDate, author, image } = Astro.props;
---

<li>
  <a href={url} title={title}>
    <article
      class="h-full flex sm:flex-row flex-col justify-between gap-4 text-zinc-700 text-sm w-full hover:text-accent-600">
      <img class="sm:h-48" src={image} alt="" />
      <div>
        <div class="flex flex-col w-full">
          <p class="uppercase font-medium">
            {title}
          </p>
          <p class="mt-2 font-serif">
            {description}
          </p>
        </div>
        <div
          class="font-serif italic text-sm inline-flex items-center w-full tracking-wide gap-2">
          <p>
            {author}
          </p>
           &middot;
          <p><time datetime="2020-03-16"> {pubDate}</time></p>
        </div>
      </div>
    </article>
  </a>
</li>
