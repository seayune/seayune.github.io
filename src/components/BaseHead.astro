---
import "../styles/global.css";
import { AstroSeo } from "@astrolib/seo";
---

<AstroSeo
  title="Arthur Siyun Li"
  description="New-York based pianist and composer."
  canonical="https://seayune.com/Home"
  openGraph={{
    url: "https://yoursite.com/Home",
    title: "Arthur Siyun Li",
    description: "New-York based pianist and composer",
    images: [
      {
        url: "https://yoursite.com/og-image.jpg",
        width: 1200,
        height: 630,
        alt: "Open Graph Image Alt",
        type: "image/jpeg",
      },
    ],
    site_name: "Arthur Siyun Li",
    type: "website",
    locale: "en_US",
  }}
  twitter={{
    handle: "@yourhandle",
    site: "@yoursite",
    cardType: "summary_large_image",
  }}
/>
<meta charset="UTF-8" />
<meta name="viewport" content="width=device-width, initial-scale=1.0" />
<!-- Basic Meta Tags -->
<title>Arthur Siyun Li</title>
<meta
  name="description"
  content="New York-based performer and composer."
/>
<meta name="keywords" content="keyword1, keyword2, keyword3" />
<meta name="author" content="Your Name or Company Name" />

<!-- Primary SVG favicon (modern browsers) -->
<link rel="icon" href="/favicon.svg" type="image/svg+xml">

<!-- Legacy ICO fallback -->
<link rel="alternate icon" href="/favicon.ico" type="image/x-icon">

<!-- Apple Touch Icon -->
<link rel="apple-touch-icon" href="/apple-touch-icon.png">

<!-- Web App Manifest -->
<link rel="manifest" href="/site.webmanifest">

<!-- Alpine JS -->
<script defer src="https://unpkg.com/alpinejs@3.x.x/dist/cdn.min.js"></script>
