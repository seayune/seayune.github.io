---
// Assets
import { Image } from "astro:assets";
import LoginImage from "@/images/login.jpeg";
// Fundations
import Text from "@/components/fundations/elements/Text.astro";
import Button from "@/components/fundations/elements/Button.astro";
import Wrapper from "@/components/fundations/containers/Wrapper.astro";
---

<section>
  <Wrapper variant="standard">
    <div class="grid grid-cols-1 lg:grid-cols-2">
      <div class="lg:order-last">
        <Image
          class="h-64 w-full bg-base-50 object-cover lg:h-[92vh] grayscale"
          src={LoginImage}
          width={1000}
          height={1000}
          alt="#_"
        />
      </div>
      <div
        class="flex flex-col h-full 2xl:max-w-3xl 2xl:mx-auto justify-center p-8 lg:p-20"
      >
        <div class="lg:text-balance text-center">
          <Text
            tag="h1"
            variant="display2XL"
            class="text-black text-center text-balance font-serif tracking-tight font-light"
          >
            Sign in to your account
          </Text>
          <Text
            tag="p"
            variant="textXS"
            class="uppercase text-base-500 font-medium mt-1"
          >
            Welcome back! Please enter your email and password to sign in.
          </Text>
        </div>
        <form action="#" method="POST" class="mt-8 flex flex-col gap-4">
          <div>
            <label class="sr-only"> Email </label>
            <div>
              <input
                type="email"
                name="email"
                id="email"
                autocomplete="email"
                required
                aria-required="true"
                aria-describedby="email-error"
                placeholder="Your email"
                class="w-full py-2 h-8 border-t-0 px-0 border-x-0 bg-transparent border-b border-base-300 text-xs focus:outline-none focus:ring-2 focus:ring-base-500 focus:border-base-500 placeholder-base-500"
              />
              <span id="email-error" class="text-red-600 text-sm hidden">
                Please enter a valid email address.
              </span>
            </div>
          </div>
          <div>
            <label class="sr-only">
              Password
              <a class="undefined"> Forgot password? </a>
            </label>
            <div>
              <input
                type="password"
                name="password"
                id="password"
                autocomplete="current-password"
                required
                aria-required="true"
                aria-describedby="password-error"
                placeholder="Your password"
                class="w-full py-2 h-8 border-t-0 px-0 border-x-0 bg-transparent border-b border-base-300 text-xs focus:outline-none focus:ring-2 focus:ring-base-500 focus:border-base-500 placeholder-base-500"
              />
              <span id="password-error" class="text-red-600 text-sm hidden">
                Please enter a valid password.
              </span>
            </div>
          </div>
          <div class="w-full flex">
            <Button size="sm" type="submit" variant="default" class="w-full">
              Log In
            </Button>
          </div>
          <div class="flex items-center mt-12 justify-center">
            <Text
              tag="p"
              variant="textXS"
              class="uppercase text-base-500 font-medium mt-1"
            >
              Don't have an account?
              <a
                class="text-black leading-normal font-medium hover:text-base-500"
                href="/forms/signup"
              >
                Sign up
              </a>
            </Text>
          </div>
        </form>
      </div>
    </div>
  </Wrapper>
</section>
